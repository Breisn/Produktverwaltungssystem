@model IEnumerable<ProductManagementSystem.Models.Product>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header">
                        Produkt ID: @product.ProductID
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            Preis: @product.Price.ToString("C")<br>
                            Menge: @product.Quantity
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Bearbeiten
                        </a>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Löschen
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Keine Produkte gefunden.
    </div>
}

