@model ProductManagementSystem.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Produktdetails";
}
<h2>@ViewData["Title"]</h2>
<br />

<div>
    <h4>Produkt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Preis</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Menge</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Erstellungsdatum</dt>
        <dd class="col-sm-10">@Model.CreationDate.ToString("dd.MM.yyyy")</dd>
    </dl>
    @if (Model.ProductImages != null && Model.ProductImages.Any())
    {
        <div>
            <h4>Bilder</h4>
            @foreach (var image in Model.ProductImages)
            {
                <div>
                    <p>@image.FileName</p>
                    <img src="@Url.Content(image.ImagePath)" alt="Produktbild" style="max-width: 50%; margin-bottom: 10px;">
                </div>
            }
        </div>
    }
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Zurück zur Liste</a>
</div>
