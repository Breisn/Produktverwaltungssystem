@model ProductManagementSystem.Models.Product

@{
    ViewData["Title"] = "Produktdetails";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Produkt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ProductID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Preis
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Menge
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dt class="col-sm-2">
            Erstellungsdatum
        </dt>
        <dd class="col-sm-10">
            @Model.CreationDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            Erstellungsuhrzeit
        </dt>
        <dd class="col-sm-10">
            @Model.CreationDate.ToString("HH:mm:ss")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Zurück zur Liste</a>
</div>
