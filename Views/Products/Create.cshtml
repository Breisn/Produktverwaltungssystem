@model ProductManagementSystem.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Produkt hinzufügen";
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Preis</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Menge</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div id="imagesSection">
        <div class="form-group">
            <label class="form-label">Bild hochladen</label>
            <input type="file" class="form-control-file" name="Images" multiple>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Speichern</button>
</form>
