@model ProductManagementSystem.Models.Product

@{
    ViewData["Title"] = "Produkt hinzufügen";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Preis</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Menge</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Speichern</button>
</form>
<br />
<a asp-action="Index" class="btn btn-primary">Zurück zur Liste</a>
